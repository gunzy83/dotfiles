HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000

export LC_ALL=en_AU.UTF-8
export LANG=en_AU.UTF-8
export LANGUAGE=en_AU.UTF-8

# Ensure editor is set
export EDITOR=vim

# Ensure loading of custom completions
fpath+=("$HOME/.zsh/completions")

# Source init files before calling ZPLUG
init_chk=(~/.zsh/init/*.zsh(N))
for file in $init_chk; do
    source $file
done

export ZPLUG_HOME=$(brew --prefix)/opt/zplug
source $ZPLUG_HOME/init.zsh

# Oh-My-Zsh core
zplug "lib/*", from:oh-my-zsh, ignore:"*/vcs_info.zsh"

# Oh-My-Zsh plugins
zplug "plugins/history-substring-search", from:oh-my-zsh

# Zsh improvements
zplug "zsh-users/zsh-autosuggestions"
zplug "zsh-users/zsh-syntax-highlighting"
zplug "zsh-users/zsh-completions"

# Node version manager
zplug "lukechilds/zsh-nvm"

zplug "~/.zsh/rc", from:local, use:plugin.sh

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Source plugins and run compinit (and add commands to $PATH)
zplug load
# Verbose for debugging
# zplug load --verbose

# Allow loading of bash completions
autoload -U +X bashcompinit && bashcompinit

# Source bash completions
funcs_chk=(~/.zsh/bash-completions/*.zsh(N))
for file in $funcs_chk; do
    source $file
done

eval "$(starship init zsh)"
eval "$(direnv hook zsh)"
