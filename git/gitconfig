[user]
        name = Ross Williams
        email = gunzy83au@gmail.com
[core]
        editor = vim
        filemode = false
[credential]
        helper = cache --timeout=3600
[color]
        ui = auto
[push]
        default = simple
[alias]
        tree = log --graph --decorate --pretty=oneline --abbrev-commit
[status]
	submoduleSummary = true
[diff]
	submodule = log

[alias]
    passport = !${HOME}/.git/hooks/bin/git-passport/git-passport.py

[init]
	templatedir = ~/.git/templates

[alias]
	sync = "!f(){ git fetch ${1:-origin} && git rebase ${1:-origin}/master; };f"

[alias]
    newbranch = "!f(){ if [ -z $@ ]; then echo 'Usage: git newbranch <branch_name>'; else git checkout master && git sync && git checkout -b $@; fi; };f"
